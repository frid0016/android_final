<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_automobile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nineseven.groupproject.AutomobileActivity">

    <ListView
        android:id="@+id/Automobile_List_View"
        android:layout_height="250dp"
        android:layout_below="@+id/automobile_Toolbar"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/automobile_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/automobile_Toolbar"
        android:layout_toEndOf="@+id/Automobile_List_View">
    </FrameLayout>
</RelativeLayout>
