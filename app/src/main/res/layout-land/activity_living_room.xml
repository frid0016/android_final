<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Living_Room_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="nineseven.groupproject.KitchenActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Living_Room_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <fragment
        android:layout_width="400dp"
        android:name="nineseven.groupproject.LivingRoom_Fragment1"
        android:id="@+id/fragment3"
        tools:layout="@layout/living_room_fragment1"
        android:layout_weight="0.52"
        android:layout_height="450dp" />

    <fragment
        android:layout_width="150dp"
        android:layout_height="450dp"
        android:name="nineseven.groupproject.LivingRoom_Fragment2"
        android:id="@+id/fragment4"
        tools:layout="@layout/living_room_fragment2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/fragment3"
        android:layout_below="@+id/Living_Room_Toolbar" />


</RelativeLayout>