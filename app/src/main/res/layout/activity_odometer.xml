<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_odometer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nineseven.groupproject.OdometerActivity">

    <TextView
        android:text="Total Km is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/odom_total"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:layout_width="100dp"
        android:layout_below="@+id/odom_total"
        android:id="@+id/total_show"
        android:layout_alignParentStart="true"
        android:layout_height="30dp" />

    <TextView
        android:text="Reset total to 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/total_show"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <Button
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox3" />
</RelativeLayout>
