<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_radio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nineseven.groupproject.RadioActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        android:layout_marginTop="38dp"
        android:id="@+id/progressBar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/station4"
        android:layout_below="@+id/station2"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/play"
        android:id="@+id/play"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pause"
        android:layout_marginStart="15dp"
        android:id="@+id/stop"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/play" />

    <Button
        android:text="5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/station5"
        android:layout_below="@+id/station1"
        android:layout_alignStart="@+id/station2" />

    <Button
        android:text="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/station2"
        android:layout_above="@+id/station5"
        android:layout_toEndOf="@+id/station4" />

    <Button
        android:text="3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/station3"
        android:layout_above="@+id/station6"
        android:layout_alignStart="@+id/station6" />

    <Button
        android:text="6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/station6"
        android:layout_alignBaseline="@+id/station5"
        android:layout_alignBottom="@+id/station5"
        android:layout_alignStart="@+id/stop" />

    <Button
        android:text="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/station1"
        android:layout_below="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar" />

</RelativeLayout>
