<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/liv"
        android:id="@+id/imgroom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgroom"
        android:layout_alignParentStart="true"
        android:id="@+id/roomseekBar"
        android:layout_alignEnd="@+id/imgroom"
        android:max="100"
        android:progress="100"/>

    <TextView
        android:text="Closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_bl"
        android:layout_below="@+id/roomseekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_bl"
        android:layout_below="@+id/roomseekBar"
        android:layout_alignEnd="@+id/roomseekBar" />
</RelativeLayout>